/* pages/recommendSong/recommendSong.wxss */
.recommendSongContainer .header{
    width: 100%;
    height: 300rpx;
}
.recommendSongContainer .header image{
    width: 100%;
    height: 100%;
}
.recommendSongContainer .header{
    position: relative;
}
.recommendSongContainer .header .data{
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -150rpx;
    margin-top: -50rpx;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}
.header .data .day{
    font-size: 38rpx;
}

/* 列表区域 */
.listContaienr{
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    border-radius: 30rpx;
    background: white;

}
.listHeader{
    height: 80rpx;
    line-height: 80rpx;
}
.listContaienr .listHeader .changeRight{
    float: right;
}
.listScroll{
    height: calc(100vh - 380rpx);
}
.scrollItem{
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}
.scrollItem .musicImg{
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
}
.scrollItem .musicInfo{
    display: flex;
    flex-direction: column;
    flex: .9;
}
.scrollItem .musicInfo text{
    font-size: 24rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.scrollItem .icon-gengduo{
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}



