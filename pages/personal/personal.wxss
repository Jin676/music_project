/* pages/personal/personal.wxss */

/* user-section*/
.personalContainer{
    position: relative;
}
.bgImg{
    width: 100%;
}
.userContainer{
    display: flex;
    position: absolute;
    top: 80rpx;
    left: 30rpx;
}
.userContainer image{
    width: 140rpx;
    height: 140rpx;
    border: 5rpx solid #fff;
    border-radius: 50%;
}
.userContainer text{
    height: 140rpx;
    line-height: 140rpx;
    margin-left: 20rpx;
}
/* vip */
.vipContainer{
    position: absolute;
    width: 85%;
    top: 250rpx;
    left: 30rpx;
    background: rgba(0, 0, 0, .7);
    height: 240rpx;
    color: #f7d680;
    border-radius: 16rpx 16rpx 0 0;
    padding: 20rpx 24rpx;
}
.vipImage{
    position: absolute;
    top: 20rpx;
    right: 0;
    /* width: 380rpx; */
    height: 260rpx;
    width: 320px;
    height: 240px;
    display: inline-block;
    overflow: hidden;
}
.vipHeader{
    position: relative;
    width: 100%;
    display: flex;
    justify-content:space-around;
}
.vipHeader .vip{
    position: absolute;
    left: 20rpx;
    top: 16rpx;
    flex-grow: .4;
    color:#f6e5a3;
    font-size: 16px;
}
.kaitong{
    position: absolute;
    right: 20rpx;
    top: 16rpx;
    width: 132rpx;
    height: 40rpx;
    text-align: center;
    line-height: 40rpx;
    font-size: 22rpx;
    color: #36343c;
    border-radius: 20px;
    background: #f9e6af;
    z-index: 1;
}
.vipContent{
    position: relative;
    top: 100rpx;
    left: 20rpx;
}
.xiaozi{
    font-size: 24rpx;
    color: #d8cba9;
    margin-top: 10rpx;
}

/* 我的信息 */
.cover-Container{
    background: #f5f5f5;
    position: relative;
    width: 100%;
    height: 610rpx;
}
.arc{
    width: 100%;
    height: 50rpx;
    position: absolute;
    top: -50rpx;
}
.cover-item .iconfont{
    color:red;
    font-size: 50rpx;
}
.navFont{
    font-size: 24rpx;
}
.cover-Header{
    width: 90%;
    margin-left: 5%;
    display: flex;
    padding: 20rpx 0;
    background: white;
    border-radius: 15rpx;
}
.cover-item{
    width: 100%;
    display: flex;
    flex-direction: column;
    text-align: center;
    justify-content: space-around;
}

.cover-Content{
    position: absolute;
    left: 40rpx;
    width: 84%;
    margin-left: 10%;
    padding: 40rpx 20rpx;
    background: white;
    border-radius: 15rpx;
    margin:20rpx 0;
}

.text-item{
    border-top: 1rpx solid #eee;
    height: 80rpx;
    line-height: 80rpx;
    padding: 10rpx;
    font-size: 26rpx;
    color: #333;
}
.recentContainer{
    display: flex;
}
/* 最近播放 */
.recentItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
    margin-right: 20rpx;
}