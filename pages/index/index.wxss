.tuijianAfter{
    display: flex;
    width: 200rpx;
}

.tuijianAfter .tuijianAfterItem image{
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
    border-radius: 10rpx;
}

.tuijianAfter .tuijianAfterItem .afterText{
    font-size: 24rpx;
    max-width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}


